{% extends 'partials/variables.html.twig' %}

{% set module = page.header.module %}
{% set right_image = page.media[module.right_image] %}

{% block render_block %}
    <div class="about_us_unique">
        <div class="container">
			<div class="about_us_unique_header">
				{% if module.title %}
					<h3 class="block-title">{{ module.title.translatable|striptags('<span>')|raw }}</h3>
				{% endif %}

                <div class="description">
                    {% if page.content %}
                        <div class="about_us_unique_description">
                            {{ page.content|raw }}
                        </div>
                    {% endif %}

                    <div class="about_us_unique_buttons">
						{% for button in module.buttons  %}
					
						<a class="button " href="{{ home_url|e }}{{ button.link }}">
							<span>{{ button.text.translatable }}</span>
				
						</a>
						{% endfor %}
					</div>
                </div>

				
			</div>
        </div>

        <div class="about_us_unique_container container">

            <div class="left">
                <div class="top">
                    <div class="top_image">
                        <img class="" src="{{ page.media[module.left_top_image].url }}"/>
                    </div>
                    
                    <div class="content">
                        <p>{{ module.left_top_text.translatable | raw }}</p>
                        <h1>{{ module.left_top_count.translatable | raw }}</h1>
                    </div>
                </div>
                <div class="bottom">
                    <div class="content">
                        <p>{{ module.left_bottom_text.translatable | raw }}</p>
                        <h1>{{ module.left_bottom_count.translatable | raw }}</h1>
                    </div>
                    <div class="bottom_image">
                        <img class="" src="{{ page.media[module.left_bottom_left_image].url }}"/>
                    </div>
                    <div class="bottom_image">
                        <img class="" src="{{ page.media[module.left_bottom_right_image].url }}"/>
                    </div>
                </div>
            </div>
            <div class="right">
                <img class="" src="{{ page.media[module.right_image].url }}"/>
            </div>
            
        </div>
    </div>
{% endblock %}
