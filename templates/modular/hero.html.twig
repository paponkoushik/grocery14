{% extends 'partials/variables.html.twig' %}

{% set contents = page.header.hero %}

{% block render_block %}
    <section class="hero-section" id="hero-section">
        <div class="hero-wrapper container slide-in">
            <div class="text-contents">
                <div class="hero-content-head">

                    {% if contents.title != null %}
                        <h1 class="hero-title">{{ contents.title.translatable|raw }}</h1>
                    {% endif %}

                    {% if contents.text != null %}
                        <p>{{ contents.text.translatable|raw }}</p>
                    {% endif %}
                </div>

                <div class="hero-buttons">
                    {% for button in contents.buttons %}
                        <a class="button slide-in {{ button.btn_class }}"
                           href="/{{ grav.language.getActive }}{{ button.link }}">
                            {{ button.text.translatable }}

                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 18 12" fill="none">
                                <path d="M12.7071 0.292889C12.3166 -0.0976313 11.6834 -0.0976312 11.2929 0.292899C10.9024 0.683419 10.9024 1.31659 11.2929 1.70711L14.5858 5H1C0.44772 5 0 5.4477 0 6C0 6.5523 0.44772 7 1 7H14.5858L11.2929 10.2929C10.9024 10.6834 10.9024 11.3166 11.2929 11.7071C11.6835 12.0976 12.3166 12.0976 12.7072 11.7071L17.7018 6.7124C17.7202 6.6942 17.738 6.6753 17.755 6.6558C17.8225 6.5781 17.8761 6.4926 17.9158 6.4024C17.9696 6.2801 17.9996 6.145 18 6.003V6C18 5.9969 18 5.9938 18 5.9907C17.9988 5.865 17.9745 5.7447 17.931 5.6341C17.8822 5.5098 17.8076 5.3933 17.7071 5.2929L12.7071 0.292889Z" fill="white"/>
                            </svg>
                        </a>
                    {% endfor %}
                </div>
            </div>

            {% if contents.image %}
                <div class="image-contents">
                    <img class="image_main" src="{{ page.media[contents.image].url }}" alt="Hero Image"/>

                    <img class="image_left" src="{{ url('theme://images/hero_img_rating.png') }}" />
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
